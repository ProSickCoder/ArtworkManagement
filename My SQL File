CREATE DATABASE ArtGalleryManagementSystem;

USE ArtGalleryManagementSystem;

CREATE TABLE Artists ( ArtistID INT AUTO_INCREMENT, Name VARCHAR(100), Biography TEXT, Portfolio VARCHAR(255), ContactInfo VARCHAR(255), PRIMARY KEY (ArtistID) );

CREATE TABLE Artworks ( ArtworkID INT AUTO_INCREMENT, Title VARCHAR(100), ArtistID INT, Medium VARCHAR(100), Dimensions VARCHAR(100), CreationDate DATE, Price DECIMAL(10, 2), ImagePath VARCHAR(255), PRIMARY KEY(ArtworkID), FOREIGN KEY (ArtistID) REFERENCES Artists(ArtistID) );

CREATE TABLE Exhibitions ( ExhibitionID INT AUTO_INCREMENT, Title VARCHAR(100), StartDate DATE, EndDate DATE, PRIMARY KEY (ExhibitionID) );

CREATE TABLE Users ( UserID INT AUTO_INCREMENT, Username VARCHAR(100), Password VARCHAR(255), Role VARCHAR(50), PRIMARY KEY (UserID) );

CREATE TABLE Transactions ( TransactionID INT AUTO_INCREMENT, UserID INT, ArtworkID INT, TransactionDate DATE, TransactionAmount DECIMAL(10, 2), PRIMARY KEY (TransactionID), FOREIGN KEY (UserID) REFERENCESArtworks(ArtworkID) );

ALTER TABLE Artworks ADD FOREIGN KEY (ExhibitionID) REFERENCES Exhibitions(ExhibitionID);
